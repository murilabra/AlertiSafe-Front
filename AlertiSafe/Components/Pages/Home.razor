@page "/"
@using MudBlazor


<MudLayout>
    <MudAppBar Elevation="4" Class="justify-content-center">
        <MudText Typo="Typo.h6" Align="Align.Center">AlertiSafe</MudText>
    </MudAppBar>

    <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
        <MudGrid Spacing="3">
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="alert-card">
                    <MudCardContent>
                        <MudIconButton Icon="@Icons.Material.Filled.FireExtinguisher" Color="Color.Error" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Align="Align.Center">Incendio</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="alert-card">
                    <MudCardContent>
                        <MudIconButton Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Align="Align.Center">Temblor</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="alert-card">
                    <MudCardContent>
                        <MudIconButton Icon="@Icons.Material.Filled.Tsunami" Color="Color.Info" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Align="Align.Center">Tsunami</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="alert-card">
                    <MudCardContent>
                        <MudIconButton Icon="@Icons.Material.Filled.Tornado" Color="Color.Dark" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Align="Align.Center">Tornado</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="alert-card">
                    <MudCardContent>
                        <MudIconButton Icon="@Icons.Material.Filled.Flood" Color="Color.Tertiary" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Align="Align.Center">Inundación</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="alert-card">
                    <MudCardContent>
                        <MudIconButton Icon="@Icons.Material.Filled.WaterDrop" Color="Color.Primary" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Align="Align.Center">Precipitaciones</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <!-- Agrega más botones según las alertas necesarias -->
        </MudGrid>
    </MudContainer>
</MudLayout>

<style>

    .alert-card {
        text-align: center;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 10px;
        transition: transform 0.3s;
    }

    .alert-card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>